<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/com_tnk_ppi_ad_item_bg"
    >

    <ImageView
        android:id="@+id/com_tnk_ad_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_tnk_ppi_ad_list_item_line_height"
        android:background="@color/com_tnk_ppi_ad_list_feed_line_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/com_tnk_ppi_ad_list_item_info_layout_padding_h"
        android:paddingRight="@dimen/com_tnk_ppi_ad_list_item_info_layout_padding_h"
        android:layout_marginTop="@dimen/com_tnk_ppi_ad_list_item_info_layout_margin_top"
        >

        <TextView
            android:id="@+id/com_tnk_ad_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/com_tnk_ppi_ad_list_item_title_text_color"
            android:textStyle="bold"
            android:textSize="@dimen/com_tnk_ppi_ad_list_item_title_text_size"
            android:layout_marginBottom="@dimen/com_tnk_common_5dp"
            />

        <TextView
            android:id="@+id/com_tnk_ad_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/com_tnk_ppi_ad_list_item_desc_text_color"
            android:textSize="@dimen/com_tnk_ppi_ad_list_item_desc_text_size"
            />

        <RelativeLayout
            android:id="@+id/com_tnk_ad_item_tag_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/com_tnk_common_10dp"
            android:layout_marginBottom="13dp"
            >

            <TextView
                android:id="@+id/com_tnk_ad_item_campaign_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/com_tnk_ad_item_just_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/com_tnk_ad_item_campaign_type"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/com_tnk_ppi_ad_list_item_tag_text_size"
                android:textStyle="bold"
                android:textColor="@color/com_tnk_ppi_ad_list_feed_button_color_default"
                android:text="+"
                android:layout_marginLeft="3dp"
                />

            <TextView
                android:id="@+id/com_tnk_ad_item_tag_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/com_tnk_ad_item_just_plus"
                android:layout_toLeftOf="@+id/com_tnk_ad_item_tag"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textSize="@dimen/com_tnk_ppi_ad_list_item_tag_text_size"
                android:textStyle="bold"
                android:textColor="@color/com_tnk_ppi_ad_list_feed_button_color_default"
                android:layout_marginRight="2dp"
                />

            <TextView
                android:id="@+id/com_tnk_ad_item_tag"
                android:layout_width="@dimen/com_tnk_ppi_ad_list_item_tag_width"
                android:layout_height="@dimen/com_tnk_ppi_ad_list_item_tag_height"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/com_tnk_ppi_ad_list_item_tag_text_size"
                android:padding="0dp"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_tnk_common_15dp"
        android:background="@color/com_tnk_popup_ppi_ad_list_background_color"
        />

</LinearLayout>